<!DOCTYPE html>
<html lang="fr">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="website-name">Omran Soliman</title>
    <link href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        

       


        

     

   



        .language-switch {
            cursor: pointer;
            background: none;
            border: none;
            color: var(--text-color);
            font-family: 'Audiowide', cursive;
        }

        .social-icon {
            color: var(--text-color);
            text-decoration: none;
            font-size: 1.2rem;
        }


    


    </style>
</head>
<body>
    <nav>
        <a href="/" class="logo" id="logo">Omran Soliman</a>
        <div class="nav-links">
            <a href="#home" data-fr="Accueil" data-en="Home">Accueil</a>
            <a href="#portfolio" data-fr="Portfolio" data-en="Portfolio">Portfolio</a>
            <a href="#contact" data-fr="Contact" data-en="Contact">Contact</a>
            <a href="#about" data-fr="À propos" data-en="About">À propos</a>
            <a id="instagram-link" class="social-icon" target="_blank"><i class="fab fa-instagram"></i></a>
            <button class="language-switch" onclick="toggleLanguage()">EN</button>
        </div>
    </nav>




  

    <script>
        if (!window.picflow) {
          window.picflow = true;
          const script = document.createElement("script");
          script.src = "https://picflow.com/embed/main.js";
          script.type = "module";
          script.defer = true;
          document.head.appendChild(script);
        }
      </script>
    <script src="config.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function () {

        document.querySelector('.logo').addEventListener('click', function(e) {
            e.preventDefault(); // Prevent default link action
            window.location.reload(); // Refresh the page
        });

        document.querySelector('[href="#home"]').addEventListener('click', function(e) {
            e.preventDefault(); // Prevent default link action
            window.location.reload(); // Refresh the page
        });

        let currentLang = 'fr'; // Default language
    
        // Function to load translations dynamically
        function loadTranslations() {
            const translations = config.translations[currentLang];
    
            // Update text based on the selected language
            document.querySelector('.home-title').textContent = translations.homeTitle;
            document.querySelector('.home-subtitle').textContent = translations.homeSubtitle;
            document.querySelector('#about .about-section p').textContent = translations.aboutText;
    
            // Update menu items
            const menuItems = document.querySelectorAll('.nav-links');
            menuItems[0].textContent = translations.menu.home;
            menuItems[1].textContent = translations.menu.portfolio;
            menuItems[2].textContent = translations.menu.contact;
            menuItems[3].textContent = translations.menu.about;
        }
    
        // Language toggle
        function toggleLanguage() {
            currentLang = currentLang === 'fr' ? 'en' : 'fr';
            loadTranslations();
        }
    
        // Load initial content
        window.onload = function () {
            // Set background image for home section
            document.getElementById('home').style.backgroundImage = `url('${config.homeBackground}')`;

            // Set website name
            document.getElementById('website-name').textContent = config.websiteName;
            document.getElementById('logo').textContent = config.websiteName;
            document.getElementById('instagram-link').href = config.instagram;
            document.getElementById('contact-email').textContent = `Email: ${config.email}`;
            document.getElementById('contact-phone').textContent = `Tel: ${config.phone}`;

            // Dynamically load portfolio images

            loadTranslations(); // Load the default language
        };

       

       
    });
    </script>
</body>
</html>
